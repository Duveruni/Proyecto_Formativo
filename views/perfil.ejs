            <img src="/img/user.png" alt="logo" class="rounded-circle mx-auto d-block m-4 mx-auto" id="logo" width="35%">
          
            <input type="hidden" placeholder="id" id="id_usuario" value="id_usuario">

            <h6 class=" mb-2 text-muted">identificacion:</h6>
            <input type="number" name="identificacion" id="identificacion" style="border: none; text-align: center;" value="<%- usuario[0].identificacion %>"><hr style="margin-top: 0;">

            <h6 class="card-subtitle mb-2 text-muted">Nombres:</h6>
            <input type="text" name="nombres" id="nombres" style="border: none; text-align: center;" value="<%- usuario[0].nombres %>"><hr style="margin-top: 0;">

            <h6 class="card-subtitle mb-2 text-muted" id="apellidos">Apellidos:</h6>
            <input type="text" name="apellidos" id="apellidos" style="border: none; text-align: center;" value="<%- usuario[0].apellidos %>"><hr style="margin-top: 0;">

            <h6 class="card-subtitle mb-2 text-muted">Nombre usuario</h6>
            <input type="text" name="nombre_Usuario" id="username" style="border: none; text-align: center;" value="<%- usuario[0].nombre_Usuario %>"><hr style="margin-top: 0;">
          </div>
        </div>
      </div>
    </div>
   
  </body>

